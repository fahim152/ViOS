<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".swipe3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="3"
        android:layout_marginTop="40dp"
        android:textColor="#000000"
        android:textSize="35dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user"
            android:layout_weight="1"
            />

    </LinearLayout>
    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="40dp"
        android:textColor="#4D4545"
        android:textSize="20dp"
        android:lines="6"
        android:text="Once your patient approaches your location,\nyou will recieve notification\n\nYou may instruct the patient to complete your consultation payment at reception"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:background="#FFFFFF"
        android:text="SWIPE LEFT"
        android:textSize="10dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"/>
    <SeekBar
        android:layout_width="360dp"
        android:layout_height="30dp"
        android:progress="60"
        android:progressTint="#4D4545"
        android:thumbTint="#4D4545" />

</LinearLayout>